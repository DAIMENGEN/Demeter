# 服务器配置
SERVER__HOST=localhost
SERVER__PORT=9000
SERVER__CORS_ORIGIN=http://localhost:3000

# 前端配置
VITE_HOST=localhost
VITE_PORT=3000
VITE_API_BASE_URL=http://localhost:9000/api

# 数据库配置
DATABASE__URL=postgres://username:password@localhost:5432/demeter
DATABASE__MAX_CONNECTIONS=5

# JWT 配置
JWT__SECRET=your-secret-key-change-this-in-production
JWT__ACCESS_TOKEN_EXPIRES_IN=3600
JWT__REFRESH_TOKEN_EXPIRES_IN=2592000

# Snowflake ID 生成器配置
# 数据中心ID (0-31)，默认 1
SNOWFLAKE__DATACENTER_ID=1
# 机器ID (0-31)，默认 1
# 在分布式环境中，每台服务器必须配置不同的 machine_id
SNOWFLAKE__MACHINE_ID=1

# 日志配置
# 日志目录路径
LOG_DIR=logs
# 日志文件名前缀
LOG_FILE_PREFIX=demeter
# 单个日志文件最大大小（字节），默认 10MB
LOG_MAX_FILE_SIZE=10485760
# 日志保留天数，默认 7 天
LOG_RETENTION_DAYS=7
# 日志级别 (trace, debug, info, warn, error)，默认 info
RUST_LOG=info

